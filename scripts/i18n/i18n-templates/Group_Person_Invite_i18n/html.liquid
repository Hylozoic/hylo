{% snippet 'header_redesign' %}
{% snippet "macro: actor_pill" %}

{% set group_pill = actor_pill(group_name, group_avatar_url, group_url) %}
{% set default_message = "Hi!<br><br>I'm inviting you to join my community on Hylo." %}
{% set message_formatted = message.format(group_name)|default(default_message, true)|safe %}

<p class="lead">
  {% trans %}You've been invited to join {{group_pill}} {% endtrans %} !
</p> 
 
<div class='card'>
  <div style='font-weight: bold; margin-top: 5px; margin-bottom: 10px;'>{{inviter_name}} {% trans %}invited you {% endtrans %}</div>
  <div>{{message_formatted}} 
  </div>
</div>   

{% set group_name_var = group_name %}
<a class='btn btn-blue' href='{{invite_link}}'>{% trans %}Join {{group_name_var}}{% endtrans %}</a> 

{% snippet 'footer_redesign' %}