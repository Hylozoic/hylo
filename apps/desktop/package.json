{
  "name": "desktop",
  "productName": "Hylo",
  "version": "0.0.1",
  "description": "The Desktop version of Hylo",
  "main": "main.js",
  "author": "Hylo <hello@hylo.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^20",
    "yarn": "^4.5.0"
  },
  "scripts": {
    "prebuild": "yarn copy-shared-packages",
    "postbuild": "yarn restore-workspace-references",
    "copy-shared-packages": "node scripts/copy-shared-packages.js",
    "restore-workspace-references": "node scripts/restore-workspace-references.js",
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "yarn copy-shared-packages && electron-forge package && yarn restore-workspace-references",
    "make": "yarn copy-shared-packages && electron-forge make && yarn restore-workspace-references"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^37.2.4"
  },
  "dependencies": {
    "@hylo/navigation": "file:./shared-packages/navigation",
    "@hylo/presenters": "file:./shared-packages/presenters",
    "electron-squirrel-startup": "^1.0.1",
    "i18next": "^23.0.0",
    "i18next-http-backend": "^2.0.0"
  }
}